/**index.wxss**/
.indexlist{padding:0 0;}
.head_img{height:200px;}
.head_img image{width:100%;height:200px;}
.indexad{
  position:relative;
}
.list_item{
  display:flex;align-items:center;justify-content:space-between;padding:30rpx 40rpx;position:relative;
}
.list_item:before{
    content:'';display:block;position:absolute;border-bottom:1px solid #eee;right:0;bottom:0;left:0;transform:scale(.5);transform-origin:0 100%;
    width:200%;
}
.location{
  color:#999;margin-top:10rpx;
}
.list_text{
  font-size:28rpx;
}
.head_name{
  position:absolute;left:0;right:0;bottom:0;background:rgba(0,0,0,.5);
}
.head_name view,.head_name text{color:#fff;}
.list_first{
  display:flex;align-items: center;
}
.list_item .icon{font-size:40rpx;margin-right:8rpx;}
.list_btn{border-radius:200rpx;background-color:#EA5E00;padding:12rpx 20rpx;font-size:24rpx;color:#fff;
}
.head_name_title{font-size:30rpx;}
.head_name{padding:30rpx;}
.head_name text{line-height:38rpx;display:block;}