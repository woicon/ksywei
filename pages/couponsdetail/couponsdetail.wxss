/* pages/couponsdetail/couponsdetail.wxss */

.coupons-detail{
    margin:10% 4%;
    padding:30rpx;
    border-radius:12rpx;
    position:relative;
    z-index:1;
   /* // animation:easyin .5s .2s ease-in both; */
}
.coupon-info{
    margin:40rpx 0 0;
    border-top:1px dashed #eee;
    position:relative;
}
.coupon-info .left,
.coupon-info .right{
    content:'';
    display:block;
    position:absolute;
    width:24rpx;
    height:24rpx;
    top:-12rpx;
    border-radius:90px;
}
.coupon-info .left{
    left:-40rpx;
}

.coupon-info .right{
    right:-40rpx;
}

.coupon-infos view{
    line-height:2;
    color:#ccc;
    font-size:24rpx;
    display:flex;
    align-items:center;
}
.coupon-infos .icon{
    margin-right:6rpx;
}
.cost{
    font-size:30rpx;
    text-align:center;
    color:#FF5C3B; 
    display:flex;
    align-items:center;
    justify-content:center;
}
.cost text{
    font-size:80rpx;
}
.coupon-name{
    font-size:36rpx;
    margin:20rpx 0;
    text-align:center;
}
.ewm-img image,
.ewm-img canvas{
    margin:0 auto;
}
.coupons-logo{
    width:120rpx;
    height:120rpx;
    margin:0 auto;
    margin-top:-90rpx;
    border-radius:920rpx;
    overflow:hidden;
}
.coupons-logo image{
    width:100%;
    height:100%;
}
.rqcode{
    margin:30rpx auto -20px;
    overflow:hidden;
}
.rqcode .couponno{
    line-height:2;
    color:#999;
    text-align:center;
    margin-top:0;
}

.rqcode-img image,
.rqcode-img canvas{
    margin:0 auto;
    display:block;
}
.couponno{
    text-align:center;
    margin-top:-14px;
    color:#999;
}
.nos{
    letter-spacing:14rpx;
    font-size:26rpx;
    
}
.coupons-detail{
    background:#fff;
}
.sku{
    display:flex;
    align-items: center;
    justify-content:space-between;
    margin-bottom:20rpx;

}
.ewm{
  padding-bottom:30rpx;
}
.sku-name{
    font-size:32rpx;line-height:2.5;
}
.sku-text{
    font-size:24rpx;color:#999;
}
.sku.hide{
  display:none;
}
.title{
    border-top:1px dashed #eee;
    line-height:3;
    font-size:30rpx;
    color:#1cc16f;
    display:flex;
    justify-content:space-between;
    align-items:center;
}
.title:after{
  content:'';
  display:block;
  width:10rpx;
  height:10rpx;
  border:2px solid #999;
  border-left:none;
  border-bottom:none;
  transform:rotate(45deg);
  transition:.4s;
}
.title.open:after{
  transform:rotate(135deg);
}
.description{
    position:relative;
}

.cbg{
    position:fixed;
    top:0;
    left:0;
    right:0;
    bottom:0;
    z-index:0;
}