<!--pages/couponsdetail/couponsdetail.wxml-->
<view class="coupons-detail">
    <view class="coupons-logo">
        <image mode="scaleToFill" src="{{coupon.logo}}"></image>
    </view>

    <view class="coupon-name">{{coupon.title}}</view>
    <view wx:if="{{coupon.couponType == 1}}"  class="cost"><text class="price">{{discount}}</text>折</view>
    <view wx:else class="cost">¥<text class="price">{{coupon.reduceCost}}</text></view>

    <view class="coupon-infos">
        <!-- {{coupon.beginTime}}至 -->
        <view class="classname"> <text class="icon ico-clock"></text> 有效期：{{coupon.endTime}}</view>
        <view class="classname"><text class="icon ico-moneyr"></text>满{{coupon.leastCost}}元可用</view>
    </view>

    <view class="coupon-info">
        <!-- <view class="rqcode">
            <view class="rqcode-img">
                <image mode="aspectFit" mode="scaleToFill"  data-id="{{coupon.couponNo}}" src="../../pages/images/rcCode.png"></image>
            </view>
            <view class="couponno nos">{{coupon.couponNo}}</view>
        </view> -->
        <view class="ewm">
            <view class="ewm-img">
                <!-- <image mode="aspectFit" data-id="{{coupon.couponNo}}" src="../../pages/images/1499668706.png"></image> -->
                <canvas bindtap="previewImg" hidden="{{canvasHidden}}" style="width:{{qrSize}}px;height:{{qrSize}}px" canvas-id="mycanvas"/>
            </view>
            <view class="couponno">{{coupon.notice}}</view>
        </view>
        <block wx:if="{{copuon.type == '7' && copuon.type == '5'}}">
            <view class="title">适用商品</view>
            <view class="sku">
                <view class="classname">

                    <view class="sku-name">{{coupon.goodItem.itemName}}</view>
                    <view class="sku-text">{{coupon.goodItem.itemText}}</view>
                </view>
                <view class="sku-price price">¥{{coupon.goodItem.itemPrice}}</view>
                <!-- {{coupon.goodItem.itemNo}} -->
            </view>
        </block>
        <view class="title">优惠券详情</view>

        <view class="description">
            <view class="description-text">{{coupon.description}}</view>
        </view>

        <view wx:if="{{coupon.servicePhone}}" class="phone">客服电话：{{coupon.servicePhone}}</view>

    </view>
</view>