/* pages/order/order.wxss */

.orderlist{
    margin:0 30rpx;position:relative;z-index:0;background:#fff;
}
.item{display:flex;justify-content:space-between;align-items:center;
    padding:30rpx 0;
    position:relative;
}
.item:after {
    content: '';
    display: block;
    position: absolute;
    border-bottom: 1px solid #eee;
    right: 0;
    bottom: 0;
    left: 0;
    transform: scale(0.5);
    transform-origin: 0 100%;
    width: 200%;
}
.time{
    color:#666;
    margin-bottom:10rpx;
}

.type{
    display:inline-block;
}

.swiper-tab{
  width: 100%; 
  border-bottom:2px solid #eee; 
  text-align: center; 
  display:flex;
  justify-content:space-around;
  position:fixed;
  left:0;right:0;top:0;
}

.swiper-tab-list{
  font-size:32rpx; 
  display: inline-block; 
  margin-bottom:-2px;
  color: #777777; 
   padding:0 30rpx;
   line-height:38px;
   border-bottom:2px solid transparent;
}

.swiper-tab-list.active{
  color:#1CC16F; 
  border-bottom:4rpx solid #1CC16F;
}

.swiper-box{ 
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
  position:absolute;left:0;right:0;top:80rpx;bottom:120rpx;
}