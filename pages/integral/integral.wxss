/* pages/integral/integral.wxss */
.integral-head{
    height:220rpx;display:flex;align-items: center;justify-content: center;position:relative;
     background:linear-gradient(#1CC16F 0%, #13af61 100%);
}
.integral-head .icon{
    position:absolute;right:25rpx;top:15rpx;color:#fff;width:36rpx;height:36rpx;border:1px solid #fff;border-radius:90px;
    text-align:center;line-height:34rpx;
   
}
.lsimg{
    position:absolute;bottom:-2px;left:-30px;width:1326px;height:50px;opacity:.5;
    animation:trx 5s linear infinite;
}
.lsimg2{
    left:-100px;
    animation:trx 4s linear infinite;
}
.lsimg image{width:100%;height:100%;}
.points{color:#fff;font-size:66rpx;}
.integral-item{
    padding: 30rpx;display:flex;justify-content:space-between;position:relative;align-items:center;
}
.integral-item .type{font-size:28rpx;color:#555;margin-bottom:18rpx;}
.integral-item .time{color:#999;font-size:24rpx;}
.integral-item .number{font-size:36rpx;color:#FF5C3B;

}
.integral-item:after{
    content:'';width:200%;position:absolute;left:0;bottom:0;height:1px;border-bottom:1px solid #eee;transform: scale(.5);transform-origin: 0 0;
}

@keyframes trx{
    0%{transform: translateX(0)}
    100%{transform: translateX(-50%)}
}