/* pages/giftget/giftget.wxss */
page{
    padding-bottom:140rpx;
}

.sendcard{
    margin:0 40rpx;
    padding-bottom:90rpx;
}

.card-head{
    border-radius:18rpx;
    overflow:hidden;
    height:400rpx;
    margin:30rpx 0;
}

.card-head image{
    width:100%;
    height:100%;
}

.theme{
    display:flex;
    align-items:center;
    justify-content:space-between;
    flex-wrap:wrap;
}
.pagetitle{
    text-align:center;
    line-height:2;
    margin:30rpx 0;
    font-size:32rpx;
}
.theme-item{
    width:30%;
    opacity:.3;
    text-align:center;
    position:relative;
    margin-bottom:30rpx;
}

.theme-item.active{
    opacity:1;
}

.theme-item .title{
    line-height:2;
    color:#444;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
}

.theme-img{
    width:100%;
    height:120rpx;
    border-radius:10rpx;
    overflow:hidden;
}

.theme-img image{
    width:100%;
    height:100%;
}
.value-item{
    display:flex;
    align-items: center;
    justify-content:space-between;
    position:relative;
}
.value-item:after{
   content:'';
    display:block;
    position:absolute;
    border-bottom:1px solid #eee;
    right:0;
    bottom:0;
    left:0;
    transform:scale(.5);
    transform-origin:0 100%;
    width:200%;
}
.value-item .value{
    font-size:28rpx;
}
.cart{
    display:flex;
    justify-content:flex-end;
    align-items:center;
}

.cart .min,
.cart .add{
    width:90rpx;
    height:90rpx;
    text-align:center;
    display:flex;
    align-items:center;
    justify-content:center;
}
.cart .hide{
    display:none;
}
.total{
    position:fixed;
    left:0;
    right:0;
    bottom:0;
    background:#fff;
    display:flex;
    justify-content:space-between;
    align-items:center;
    box-shadow:0 -4rpx 10px rgba(0,0,0,.1);
}
.total-bar{
    display:none;
    font-size:24rpx;
    color:#999;
    line-height:1.4;
    padding-left:40rpx;
}
.total-bar.show{
    display:block;
}
.buycard{
    width:50%;
    border-radius:0;
    margin-top:0;
    padding:38rpx 0;
}
.total-price{
    color:#FF5C3B;
}
.total-price text{
    font-size:40rpx;
}
