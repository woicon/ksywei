/* pages/card/card.wxss */
 .vipcard {
    margin:40rpx;
    background:#1CC16F;
    padding:30rpx;
    border-radius:16rpx;
    height:380rpx;
    position:relative;
    animation:easyin .5s ease-in;
    box-shadow:0 4px 22px rgba(0, 0, 0, .3);
    background-size:cover;
    overflow:hidden;
}
.vipcard .logo {
    width:50rpx;
    height:50rpx;
    border-radius:100%;
    overflow:hidden;
    margin-right:4px;
}
.vipcard .logo image {
    width:50rpx;
    height:50rpx;
    vertical-align:middle;
}
.bgimg {
    position:absolute;
    left:0;
    right:0;
    bottom:0;
    top:0;
    z-index:0;
}
.bgimg image {
    width:100%;
    height:100%;
}
.vipcard:before {
    content:'';
    position:absolute;
    left:0;
    right:0;
    top:0;
    bottom:0;
    /* background:linear-gradient(rgba(255,255,255,0.4) 0%, rgba(255,255,255,0) 100%);border-radius:16rpx; */
}
.card-info {
    display:flex;
    color:#fff;
    align-items:center;
    position:relative;
    z-index:10;
}
.card-info text {
    font-size:32rpx;
}
.card-info .icon {
    width:60rpx;
    height:60rpx;
    background:yellow;
    color:#333;
    border-radius:400rpx;
    text-align:center;
    line-height:60rpx;
    font-size:44rpx;
    margin-right:12rpx;
}
.cardid {
    align-self:flex-end;
    color:#fff;
    position:absolute;
    left:30rpx;
    bottom:32rpx;
}
.card-page {
    position:relative;
    z-index:10;
}
.payico {
    position:absolute;
    right:30rpx;
    bottom:30rpx;
    color:#fff;
    font-size:40rpx;
}
.member-col {
    align-self:flex-end;
    display:flex;
    margin:40rpx 0;
}
.col-item {
    font-size:28rpx;
    width:33.333333%;
    text-align:center;
    color:#888;
    position:relative;
    animation:easyin .5s ease-in forwards;
    animation-delay:.3s;
}
.col-item:after {
    content:'';
    display:block;
    border-right:1px solid #eee;
    transform:scaleY(.5);
    position:absolute;
    right:0;
    top:0;
    height:200%;
    transform-origin:0 0;
}
.col-item .value {
    font-size:36rpx;
    color:#444;
    margin-top:10rpx;
}
.card-list .info-title {
    padding:0 40rpx;
    position:relative;
}
.card-list .info-title text {
    margin:0 0;
    display:block;
    position:relative;
    padding:40rpx 0;
    font-size:32rpx;
}
.card-list .info-title text:after {
    content:'';
    position:absolute;
    left:0;
    bottom:0;
    transform:scaleX(.5);
    border-bottom:1px solid #eee;
    display:block;
    transform-origin: 0 100%;
    height:1px;
    width:200%;
}
.card-list .info-title:before {
    content:'';
    position:absolute;
    right:60rpx;
    width:6px;
    height:6px;
    border:2px solid #eee;
    border-left:none;
    border-bottom:none;
    transform:rotate(45deg);
    top:50%;
}

.info-item{
    padding:20rpx 0;
    margin:0 40rpx;
    display:flex;
    justify-content:space-between;
    align-items:center;
    position:relative;
}

.info-item:after {
    content:'';
    display:block;
    border-bottom:1px solid #eee;
    transform:scaleX(.5);
    position:absolute;
    right:0;
    top:0;
    height:200%;
    transform-origin:0 0;
}
.description-content{
    margin:0 40rpx;
}
.description-text{
    padding-left:200rpx;
}
.description-title{
    width:200rpx;
}