/**index.wxss**/
.menuContainer{height:100%;position:relative;display:flex;flex-wrap:wrap;}
.header{position:fixed;left:0;top:0;right:0;height:100rpx;}
.footer{position: fixed;bottom:0;left:0;right:0;height:100rpx; z-index:200;background:#333333;}
.subOrder{left:50%;line-height:100rpx;color:#fff;background:#e95a4c;text-align: center;position:absolute;right:0;top:0;bottom:0;}
.menuhover{background:#fff;}
.cartBtnHover{background:#e95a4c;}
.menuCat{position:absolute;left:0;top:0;bottom:100rpx;width:30%;background:#f4f4f4;}
.menuContent{position:absolute;right:0;top:0;bottom:100rpx;left:30%;width:70%;}
.menuCont{position:relative;display:none;}
.menuItm{display:block;text-align:left;font-size:26rpx;position:relative;padding:30rpx 40rpx;}
.footerPrice{width:50%;float:left;}
.skuItem{position:relative;padding:40rpx 15rpx;box-sizing:border-box;padding-left:140rpx;}
.skuItem::before{content:'';border-bottom:1px solid #ddd;position:absolute;left:0;right:0;bottom:0;
transform-origin: 0 100%;transform: scaleY(0.5);}
.skuImg{width:100rpx;height:100rpx;position:absolute;left:20rpx;top:40rpx;}
.skuAmout{font-size:24rpx;width:50rpx;text-align:center;display:inline-block;vertical-align:top;line-height:40rpx;}
.cartBtnGroup{position:absolute;right:20rpx;bottom:20rpx;left:0;text-align:right;}
.minBtn,.addBtn{line-height:40rpx;position:relative;vertical-align:top;display:inline-block;
font-size:0;}
.minBtn:after,.addBtn:after,.addBtn:before{
  content:'';display:block;width:20rpx;height:4rpx;background:#fff;position:absolute;left:50%;top:50%;margin-left:-10rpx;margin-top:-2rpx;}
.addBtn:before{width:4rpx;height:20rpx;margin-left:-2rpx;margin-top:-10rpx;}
.skuTitle{font-size:32rpx;display:block;margin-bottom:20rpx;}
.skuPrice{font-size:24rpx;color:#e95a4c;}
.skuPrice text{font-size:32rpx;margin-left:8rpx;}
.addBtn,.minBtn{width:40rpx;height:40rpx;text-align:center;line-height:40rpx;background:#ccc;color:#444;border-radius:90rpx;}
.cartAmount{position:absolute;left:20rpx;top:10rpx;width:80rpx;height:80rpx;background-color:#1aad19;border-radius:100%;transition:.6s;}
.cartAmount .icon{font-size:40rpx;color:#fff;text-align:center;line-height:80rpx;}
.allAmount{position:absolute;right:-10rpx;top:-10rpx;background:#e95a4c;color:#fff;border-radius:200rpx;display:block;font-size:10px;text-align:center;min-height:16px;padding:0 5px;line-height:16px;}
.catAmout{display:block;right:20rpx;top:20rpx;}
.footerPrice{margin-left:120rpx;line-height:100rpx;color:#fff;transition:0.5s;}
.totalPrice{position:relative;}
.openTotal{transform:translateX(-90rpx);}
.menuActive{background:#fff;display:block;}
.catActive{display:block;background:#fff;}
.mask{position:fixed;left:0;right:0;bottom:0;top:0;background:rgba(0,0,0,.3);z-index:100;visibility:hidden;opacity:0;transition:.5s;}
.showMask{display:block;visibility:inherit;opacity:1;}
.cartListBox{height:600rpx;background:#fff;position:fixed;left:0;bottom:100rpx;right:0;z-index:101;
transform:translateY(100%);opacity:0;visibility:hidden;transition:.5s;}
.emptyCart{font-size:24rpx;color:#ccc;text-align:center;margin-top:25%;}
.emptyCart:before{font-size:90rpx;display:block;margin-bottom:20rpx;}
.noOrder{background:#222;color:#555;}
.cleanCart{display:none;font-size:26rpx;position:absolute;top:0;left:0;right:0;padding:10rpx 20rpx;text-align:right;background:#fff;z-index:99;}
.showClean{display:block;}
.cartView{top:40rpx;position:absolute;left:0;bottom:0;right:0;}
.showCart{transform:translateY(0);opacity:1;visibility:inherit;}
.openCart{top:-640rpx;}
.btnHover{background:#e95a4c;}

