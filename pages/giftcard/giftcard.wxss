/* pages/giftcard/giftcard.wxss */
page{
    background:#fafafa;
}
.head-img{
    height:400rpx;
}

.head-img image{
    height:100%;
    width:100%;
}

.card-list{
    margin:0 40rpx;
    display:flex;
    align-items:center;
    justify-content:space-between;
    flex-wrap:wrap;
}

.page-title{
    font-size:32rpx;
    margin:20rpx 40rpx;

}

.card-item{
    width:48%;
    border-radius:6rpx;
    margin:20rpx 0;

}

.card-cover{
    width:100%;
    height:200rpx;
    border-radius:12rpx;
    overflow:hidden;
}

.card-cover image{
    width:100%;
    height:100%;
}

.card-item .name{
    text-align:center;
    line-height:2.5;
    overflow:hidden;
    text-overflow:ellipsis;
    color:#666;
}

.pop-up{
    position:fixed;
    left:10%;
    right:10%;
    top:20%;
    background:#fff;
    padding:30rpx;
}

.pop-up .close{
    position:absolute;
    right:0;
    top:0;
}
.pop-up .close .icon{
    font-size:40rpx;
}

.card-icon{
    width:340rpx;
    height:230rpx;
    background:#444;
    display:flex;
    justify-content:center;
    align-items:center;
    border-radius:12rpx;
}
.card-icon .icon{
    font-size:32px;
    color:#fff;
}

.finfo{
    display:flex;
    align-items:center;
}
.userimg{
    width:80rpx;
    height:80rpx;
    border-radius:400px;
}

